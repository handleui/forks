{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "//#check": {},
    "//#fix": { "cache": false },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "out/**", ".next/**", "!.next/cache/**"]
    },
    "typecheck": { "dependsOn": ["^typecheck"] },
    "check-types": { "dependsOn": ["^check-types"] },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
