      {
        "group": "API Reference",
        "icon": "code",
        "pages": [
          "api/introduction",
          "api/authentication",
          "api/webhooks",
          "api/repositories",
          "api/checks"
        ]
      }
    ]
  },
  "navbar": {
    "links": []
  },
  "footer": {
    "socials": {
      "github": "https://github.com/handleui/detent",
      "x": "https://x.com/handleui"
    }
  },
  "background": {
    "color": {
      "light": "#ffffff",
      "dark": "#000000"
    }
  },
  "styling": {
    "latex": false
  },
  "logo": "/images/icon_v1.png"
}
