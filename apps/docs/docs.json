{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Detent Docs",
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#4B4B4B",
    "light": "#ffffff"
  },
  "appearance": {
    "default": "light"
  },
  "subdirectory": "docs",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Contact",
          "icon": "envelope",
          "href": "https://detent.sh/contact"
        },
        {
          "anchor": "Pricing",
          "icon": "credit-card",
          "href": "https://detent.sh/pricing"
        },
        {
          "anchor": "Status",
          "icon": "signal",
          "href": "https://status.detent.sh"
        }
      ]
    },
    "groups": [
      {
        "group": "Getting Started",
        "icon": "rocket",
        "pages": ["introduction", "quickstart", "key-features"]
      },
      {
        "group": "CLI",
        "icon": "terminal",
        "pages": [
          "cli/installation",
          "cli/concepts",
          "cli/heal",
          {
            "group": "Healing",
            "pages": [
              "cli/how-healing-works",
              "cli/error-hints",
              "cli/budget",
              "cli/tools"
