{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "sh.forks.desktop",
  "productName": "Forks",
  "directories": {
    "output": "dist"
  },
  "files": ["out/**/*", "!out/**/*.map"],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": ["nsis", "zip"]
  },
  "linux": {
    "target": ["AppImage", "deb"]
  }
}
